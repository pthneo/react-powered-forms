{
  "name": "react-powered-forms",
  "version": "0.1.0",
  "description": "A TypeScript based React library for implementing powerful and malleable form builders. Type-safe and schema validated with Zod by default.",
  "main": "dist/index.cjs", 
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": ["dist"],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "prepare": "npm run build",
    "test": "vitest"
  },
  "peerDependencies": {
    "@hookform/resolvers": "^3.10.0",
    "@radix-ui/react-checkbox": "^1.1.3",
    "@radix-ui/react-dialog": "^1.1.5",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-popover": "^1.1.5",
    "@radix-ui/react-scroll-area": "^1.2.2",
    "@radix-ui/react-slider": "^1.2.2",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-tooltip": "^1.1.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.0",
    "json-schema-to-zod": "^2.6.0",
    "lucide-react": "^0.475.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.54.2",
    "react-phone-number-input": "^3.4.11",
    "sonner": "^1.7.4",
    "tailwind-merge": "^3.0.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.24.1",
    "zod-to-json-schema": "^3.24.1",
    "@radix-ui/react-select": "^2.1.5",
    "@radix-ui/react-separator": "^1.1.1",
    "@radix-ui/react-switch": "^1.1.2"
  },
  "devDependencies": {
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-tailwindcss": "^3.17.5",
    "tsup": "^7.0.0",
    "vitest": "^1.0.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.22.0",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "postcss": "^8.5.0",
    "tailwindcss": "^3.4.17"
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {}
    }
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss"
    ],
    "tabWidth": 2,
    "semi": true,
    "singleQuote": false,
    "printWidth": 100,
    "jsxSingleQuote": false,
    "trailingComma": "none",
    "bracketSpacing": true,
    "bracketSameLine": true
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "plugin:tailwindcss/recommended",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint", 
      "react", 
      "react-hooks", 
      "tailwindcss"
    ]
  },
  "keywords": [
    "react",
    "form",
    "builder",
    "dynamic",
    "form-editor",
    "forms",
    "typescript"
  ],
  "author": "Ben Schenk",
  "contributors": [
    {
      "name": "Mittun Sudhahar",
      "url": "https://github.com/mitsudz"
    }
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pthneo/react-powered-forms.git"
  },
  "bugs": {
    "url": "https://github.com/pthneo/react-powered-forms/issues"
  },
  "homepage": "https://forms.reactpowered.com/"
}
